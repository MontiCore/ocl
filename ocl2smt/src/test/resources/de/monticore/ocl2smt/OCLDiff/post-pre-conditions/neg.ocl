package docs;
ocl Person {

 context double Person.withdraw(int accountID, double amount)

   pre : amount > 500 &&
         exists  a in account : a.id == accountID &&  a.balance > amount ;


   post:
          exists  a in account : a.id == accountID &&  a.balance@pre == amount + a.balance &&
         result == amount;

   context Account a inv UniqueID:
      forall Account a1 : a1 != a implies a.id != a1.id ;

}